{
  "name": "sakuga-server",
  "version": "1.0.0",
  "description": "Sakuga backend server",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "dev:all": "concurrently -n server,client -c blue,green \"npm run dev\" \"npm run dev --prefix ../client\"",
    "build": "npm run build --prefix ../client",
    "prod": "npm run build && npm run start",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@fal-ai/client": "^1.8.1",
    "@google/generative-ai": "^0.24.1",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.5.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-rate-limit": "^8.2.1",
    "express-static-gzip": "^3.0.0",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.77.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "replicate": "^1.0.1",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.0.3",
    "@types/uuid": "^10.0.0",
    "concurrently": "^9.2.1",
    "typescript": "^5.9.3"
  }
}
